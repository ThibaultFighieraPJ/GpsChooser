<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.pagesjaunes.thibault.gpschooser">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name="com.pagesjaunes.thibault.gpschooser.MainActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name="com.pagesjaunes.thibault.gpschooser.ShareToClipboardActivity"
                android:label="@string/clipboard"
                android:icon="@drawable/ic_content_copy_24dp"
                android:theme="@style/Theme.Transparent" />
        <activity
                android:name="com.pagesjaunes.thibault.gpschooser.market.OpenMappyMarketActivity"
                android:label="@string/mappy"
                android:icon="@drawable/ic_mappy"
                android:theme="@style/Theme.Transparent" />
    </application>

</manifest>